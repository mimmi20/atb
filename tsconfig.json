{
  "compilerOptions": {
    "target": "es6",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "skipLibCheck": false,
    "noEmit": false
  },
  "include": ["public/**/*.js", "public/**/*.ts", "public/**/*.d.ts", "tsup.config.ts", "vite.config.ts", "rollup.config.mjs", "postcss.config.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
